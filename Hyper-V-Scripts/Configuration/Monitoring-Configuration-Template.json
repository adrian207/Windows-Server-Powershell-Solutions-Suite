            "Reporting": {
                "Enabled": true,
                "ReportLevel": "Comprehensive",
                "ReportTypes": [
                    "Health",
                    "Performance",
                    "Security",
                    "Compliance",
                    "Capacity",
                    "Utilization",
                    "Trends",
                    "Summary"
                ],
                "ReportSchedules": [
                    {
                        "ReportType": "Health",
                        "Schedule": "Daily",
                        "Time": "06:00",
                        "Recipients": [
                            "admin@contoso.com",
                            "ops@contoso.com"
                        ]
                    },
                    {
                        "ReportType": "Performance",
                        "Schedule": "Weekly",
                        "Day": "Monday",
                        "Time": "08:00",
                        "Recipients": [
                            "admin@contoso.com",
                            "ops@contoso.com"
                        ]
                    },
                    {
