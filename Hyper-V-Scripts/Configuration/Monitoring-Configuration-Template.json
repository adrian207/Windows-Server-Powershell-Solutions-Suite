                "CloudIntegration": {
                    "Enabled": true,
                    "CloudProvider": "Azure",
                    "CloudResourceGroup": "HyperV-Monitoring",
                    "CloudStorageAccount": "hypervmonitoring",
                    "CloudContainer": "monitoring-data"
                }
            }
        }
    }
