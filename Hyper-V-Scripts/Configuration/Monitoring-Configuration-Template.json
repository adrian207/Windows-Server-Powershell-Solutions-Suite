                "MonitoringTools": {
                    "Enabled": true,
                    "ToolProvider": "Nagios",
                    "ToolServer": "192.168.1.100",
                    "ToolPort": 5666,
                    "ToolUsername": "nagios",
                    "ToolPassword": ""
