                    "SmtpPassword": "",
                    "SmtpSSL": true,
                    "Recipients": [
                        "admin@contoso.com",
                        "ops@contoso.com",
                        "monitoring@contoso.com"
                    ]
                },
                "SMSNotifications": {
                    "Enabled": false,
                    "SmsProvider": "Twilio",
                    "SmsApiKey": "",
                    "SmsApiSecret": "",
                    "SmsFromNumber": "",
                    "SmsRecipients": [
                        "+1234567890",
                        "+0987654321"
                    ]
                },
                "WebhookNotifications": {
                    "Enabled": true,
                    "WebhookUrl": "https://webhook.contoso.com/alerts",
                    "WebhookMethod": "POST",
                    "WebhookHeaders": {
                        "Content-Type": "application/json",
                        "Authorization": "Bearer token"
                    }
                },
                "SNMPNotifications": {
                    "Enabled": false,
                    "SnmpServer": "192.168.1.100",
                    "SnmpPort": 162,
                    "SnmpCommunity": "public",
